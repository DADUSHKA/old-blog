= simple_form_for :user, :url => user_session_path, :html => {:class => 'form-horizontal'} do |f|
  = f.input :email
  = f.input :password
  = link_to 'Забыли пароль?', new_user_password_instruction_path
  .form-actions
    = f.button :submit, 'Войти', :class => 'btn-primary'
    = submit_tag t(:reset), :type => :reset, :class => "btn"

