= simple_form_for @user, :url => user_path, :html => {:class => 'form-horizontal'} do |f|
  = f.input :first_name
  = f.input :last_name
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = submit_tag t(:reset), :type => :reset, :class => "btn"