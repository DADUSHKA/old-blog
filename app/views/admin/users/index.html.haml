/= link_to 'New', new_admin_user_path
%table.table
  %thead
    %tr
      %th Id
      %th First Name
      %th Last Name
      %th Admin?
      %th Created at
      %th Actions
  %tbody
    - @users.each do |user|
      %tr
        %th= user.id
        %th= link_to user.first_name, user
        %th= link_to user.last_name, user
        %th= user.admin      
        %th= l user.created_at, :format => :short
        %th
          = link_to t('views.defaults.edit'), edit_admin_user_path(user), :class => "btn btn-primary"
          = link_to t('views.defaults.delete'), admin_user_path(user),  :method => :delete, :confirm => "Are you sure?", :class => "btn btn-danger"